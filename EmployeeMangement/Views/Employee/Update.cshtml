@model EmployeeEditViewModel

@{
    ViewData["Title"] = "Update";
    Layout = "_Layout";
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="Update" enctype="multipart/form-data" >
            <input hidden asp-for="Id"/>
            <input hidden asp-for="PhotoPath"/>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Departement" class="control-label">Departement</label>
                <input asp-for="Departement" class="form-control" />
                <span asp-validation-for="Departement" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        @*<a asp-action = "deletePhoto" asp-route-id="@Model.Id" class="btn btn-outline-secondary" >X</a>*@
                    </div>
                    <div class="custom-file">
                        <input asp-for="Photo" accept="image/*" class="custom-file-input" id="inputGroupFile01" />
                        <label class="custom-file-label" for="inputGroupFile01" >@Model.PhotoPath</label>
                    </div>
                </div>

            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
                <a href="/"  class="btn btn-dark">Cancel</a>
            </div>

           
        </form>

    </div>
</div>

@section CreateSectionJs {
<script>
         $("#inputGroupFile01").on("change", function()
            {
               var input = $(this).val().split("\\").pop();
               $(".custom-file-label").html(input);
            });
</script>
 }
