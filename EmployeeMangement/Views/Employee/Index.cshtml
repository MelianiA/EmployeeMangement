@model IEnumerable<EmployeeMangement.Models.Employee>

@{
    ViewData["Title"] = "Index";
}
<style>
    .card-img-top {
        width: 100%;
        height: 15vw;
        object-fit: cover;
    }

    .btn {
        margin-left: 5px;
    }
</style>
<h1 class="text-center">List employees</h1>
<div class="row row-cols-1 row-cols-md-3" >
    @foreach (var item in @Model)
    {
        var photoPathName = "/MyImages/" + (item.PhotoPath == null?"emp.png":item.PhotoPath);
        <div class="col mb-4">
            <div class="card">
                <img src="@photoPathName" class="img-fluid img-thumbnail"  >
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Departement</p>
                    <p class="card-text">@item.Email</p>
                </div>
                <div class="group-input  d-flex justify-content-center" style="padding:5px;">
                    <form>
                        <button asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</button>
                        <button asp-action="Update" asp-route-id="@item.Id" class="btn btn-secondary">Edit</button>
                        <button asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>

    }
</div>
