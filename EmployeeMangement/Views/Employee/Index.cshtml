@model IEnumerable<EmployeeMangement.Models.Employee>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}
<style>
    .card-img-top {
        width: 100%;
        height: 15vw;
        object-fit: cover;
    }

    .btn {
        margin-left: 5px;
    }
</style>


<a asp-action="Create">Create New</a>

<div class="row row-cols-1 row-cols-md-3" style="padding:50px;">
    @foreach (var item in @Model)
    {
        <div class="col mb-4">
            <div class="card">
                <img src="@item.Photo" class="card-img-top" height=50 width=20>
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Departement</p>
                    <p class="card-text">@item.Email</p>
                </div>
                <div class="group-input  d-flex justify-content-center">
                    <form>
                        <button asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</button>
                        <button asp-action="Update" asp-route-id="@item.Id" class="btn btn-secondary">Edit</button>
                        <button asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>

    }
</div>
