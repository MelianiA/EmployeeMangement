@model AdministrationCreateRoleViewModel

@{
    ViewData["Title"] = "Create new role";
}

<h1 class="text-center">Create new role</h1>
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create role" class="btn btn-success" />
                <a asp-action="ListRoles" asp-controller="Administration" class="btn btn-primary mx-3" >Cancel</a>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</div>
