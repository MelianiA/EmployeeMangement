@model List<EditUsersRoleViewModel>

@{
    ViewData["Title"] = "Edit role users";
}


<form method="post">
    <div class="my-5">
        <div class="card">
            <div class="card-header">
                <span class="display-3">Add or remove from this role</span>
                <hr />
                <input disabled value="@ViewBag.RoleId" class="form-control" />
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    var uniqueName = "User" + i;
                    <div class="form-check m-1">
                        <input hidden asp-for="@Model[i].UserId" />
                        <input hidden asp-for="@Model[i].UserName" />
                        <input asp-for="@Model[i].IsSelected" id="@uniqueName" class="form-check-input" />
                        <label for="@uniqueName" class="form-check-label">@Model[i].UserName </label>
                    </div>
                }
            </div>
            <div class="card-footer">
                <a asp-action="Edit" asp-route-id="@ViewBag.RoleId" class="btn btn-primary mx-2">Back to role</a>
                <button type="submit" class="btn btn-success">Update</button>
                <br/>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>
    </div>
</form>