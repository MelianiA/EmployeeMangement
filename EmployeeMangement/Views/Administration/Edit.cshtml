@model EditRoleViewModel

@{
    ViewData["Title"] = "Login user";
}

<h2 class="text-center">Edit role</h2>
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="form-group">
                <label asp-for="Id" class="control-label">Id</label>
                <input disabled asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label">Role name</label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Edit role" class="btn btn-secondary mx-1" />
                <a asp-action="ListRoles" class="btn btn-primary mx-3">Cancel</a>
            </div>
            <br/>
            @if (@Model.Users.Count == 0)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-center">List users</h5>
                        <p class="card-text text-center">Any users !</p>
                    </div>
                    <div class="group-input  d-flex justify-content-center" style="padding:5px;">
                        <form>
                            <div>
                        <button asp-action="Details" class="btn-sm btn-primary mr-1 ">Add users</button> 
                        </div>
                        <button asp-action="Update" class="btn-sm my-auto btn-secondary">Back to list</button>
                        </form>
                    </div>
                </div>
            }
            else
            {
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">List users</h5>
                    <p class="card-text text-center"> 
                        @foreach (var userEmail in Model.Users)
                        {
                            <span class="text-danger">@userEmail</span> <br/>
                        }
                    </p>
                </div>
                <div class="group-input  d-flex justify-content-center" style="padding:5px;">
                    <form>
                        <div>
                        <button asp-action="Details" class="btn-sm btn-primary mr-1 ">Add users</button> 
                        </div>
                        <button asp-action="Update" class="btn-sm my-auto btn-secondary">Back to list</button>
                    </form>
                </div>
            </div>
            }
          

            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</div>
